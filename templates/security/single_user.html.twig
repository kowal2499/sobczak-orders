{% extends 'base.html.twig' %}
{% trans_default_domain 'security' %}

{% block title %}

    {% if user is not null %}
        {{ 'Panel użytkownika:'|trans }} {{ user.getUserFullName }}
    {% else %}
        {{ 'Nowy użytkownik'|trans }}
    {% endif %}

{% endblock %}

{% block body %}
    <user-single
        {% if user is not null %}
            :user-id="{{ user.getId }}"
        {% endif %}
    ></user-single>
{% endblock %}

