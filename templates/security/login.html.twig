{% extends 'full_width.html.twig' %}
{% trans_default_domain 'security' %}

{% block title %}{% trans %}Login{% endtrans %}{% endblock %}

{% block body %}
    <div class="container">

        <div class="wrapper">

            <div class="side-left">
                <img class="" src="/imgs/logo-sobczak.png" alt="">
            </div>


            <div class="side-right">
                <div class="p-2 text-right">
                    {% include('_language_switcher.html.twig') %}
                </div>

                <div class="p-2">
                    <div class="text-center">
                        <h1 class="h2 text-gray-900 mt-4">{{ 'Logowanie do panelu'|trans }}</h1>

                        <div class="text-center">
                            <div class="alert alert-light">
                                <p><strong>{{ 'Strona przeznaczona jest wyłącznie do użytku wewnętrznego firmy %companyName%'|trans({'%companyName%': 'Sobczak Sp. z o.o.'}) }}</strong></p>
                                <p>{{ 'Pozostałe osoby zapraszamy na stronę'|trans }} <a href="http://www.sobczak.com.pl/">www.sobczak.com.pl</a></p>
                            </div>
                        </div>

                    </div>

                    <form method="post" class="pl-5 pr-5">
                        {% if error %}
                            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                        {% endif %}

                        <div class="form-group">
                            <label for="inputEmail" class="sr-only">{{ 'Email'|trans }}</label>
                            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" placeholder="{% trans %}Email{% endtrans %}" required autofocus>
                        </div>

                        <div class="form-group">
                            <label for="inputPassword" class="sr-only">{% trans %}Hasło{% endtrans %}</label>
                            <input type="password" name="password" id="inputPassword" class="form-control" placeholder="{% trans %}Hasło{% endtrans %}" required>
                        </div>

                        <input type="hidden" name="_csrf_token"
                               value="{{ csrf_token('authenticate') }}"
                        >

                        <div class="checkbox mb-3">
                            <label>
                                <input type="checkbox" name="_remember_me"> {% trans %}Pamiętaj mnie{% endtrans %}
                            </label>
                        </div>


                        <div class="form-group text-right">
                            <button class="btn btn-primary text-center" type="submit">
                                {% trans %}Zaloguj się{% endtrans %}
                            </button>
                        </div>

                    </form>

                </div>

            </div>
        </div>

    </div>
{% endblock %}
