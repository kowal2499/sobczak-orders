{% extends 'full_width.html.twig' %}

{% block title %}Login{% endblock %}

{% block body %}
    <div class="container">

        <div class="row">
            <div class="col-xl-10 col-lg-12 col-md-9">
                <div class="card o-hidden border-0 shadow-lg my-5">
                    <div class="card-body p-0">

                        <div class="row">
                            <div class="col-lg-3 leftpanel d-flex justify-content-center align-items-center">
                                <img class="img-fluid" src="/imgs/logo-sobczak.png" alt="">
                            </div>

                            <div class="col-lg-9">
                                <div class="p-4">
                                    <div class="text-center">
                                        <h1 class="h2 text-gray-900 mt-4">Logowanie do panelu</h1>

                                        <div class="text-center mt-5 mb-5">
                                            <div class="alert alert-light">
                                                <p><strong class="">Strona przeznaczona jest wyłącznie do użytku wewnętrznego firmy Sobczak&nbsp;Sp.&nbsp;z&nbsp;o.&nbsp;o.</strong></p>
                                                <p>Pozostałe osoby zapraszamy na stronę <a href="http://www.sobczak.com.pl/">www.sobczak.com.pl</a></p>
                                            </div>
                                        </div>



                                    </div>

                                    <form method="post" class="pl-5 pr-5">
                                        {% if error %}
                                            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                                        {% endif %}

                                        <div class="form-group">
                                            <label for="inputEmail" class="sr-only">Email</label>
                                            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" placeholder="Email" required autofocus>
                                        </div>

                                        <div class="form-group">
                                            <label for="inputPassword" class="sr-only">Hasło</label>
                                            <input type="password" name="password" id="inputPassword" class="form-control" placeholder="Hasło" required>
                                        </div>

                                        <input type="hidden" name="_csrf_token"
                                               value="{{ csrf_token('authenticate') }}"
                                        >


                                        <div class="checkbox mb-3">
                                            <label>
                                                <input type="checkbox" name="_remember_me"> Pamiętaj mnie
                                            </label>
                                        </div>


                                        <div class="form-group text-right">
                                            <button class="btn btn-primary text-center" type="submit">
                                                Zaloguj się
                                            </button>
                                        </div>

                                    </form>




                                </div>
                            </div>
                        </div>





                    </div>

                </div>
            </div>
        </div>



    </div>
{% endblock %}
